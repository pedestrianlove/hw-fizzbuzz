{
  "name": "HW FizzBuzz",
  "service": "cli",
  "remoteUser": "root",
  "shutdownAction": "stopCompose",
  "workspaceFolder": "/workspaces/cli",
  "dockerComposeFile": "compose.yaml",

  "customizations": {
    "vscode": {
      "extensions": [
        "stateful.runme",
        "castwide.solargraph",
        "misogi.ruby-rubocop",
      ],
      "settings": {
        "ruby.useLanguageServer": true,
        "editor.fontSize": 18,
        "editor.minimap.enabled": false,
        "workbench.editorAssociations": {
            "*.md": "markdown.preview.editor"
        }
      }
    }
  }
}
